<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:layout_marginBottom="0dp"
    app:cardCornerRadius="0dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/fila_partido"
        android:background="@android:color/white">

        <!-- Icono del deporte -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/male_ic"/>
        </LinearLayout>

        <!-- Info del partido -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:ems="15"
                android:text="Hoy tienes partido"
                android:textColor="@color/colorPrimary"
                android:gravity="bottom"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pista_notificacion"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:ems="15"
                android:text="Pista 1 de Padel"
                android:textColor="@color/colorPrimary"
                android:gravity="bottom"
                android:textSize="20sp"/>

            <!-- Info de la notificaciÃ³n -->

            <TextView
                android:id="@+id/horario_notificacion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:text="16:00-17:00"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>