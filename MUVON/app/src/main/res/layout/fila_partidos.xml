<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:layout_marginBottom="0dp"
    app:cardCornerRadius="0dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/fila_partido"
        android:background="@android:color/white">

        <!-- Icono del deporte -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/ic_deporte"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/female_ic"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Info del partido -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight= "0.60"
            android:baselineAligned="false"
            android:padding="8dp">

            <TextView
                android:id="@+id/titulo_partido"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:ems="13"
                android:text="Sergio de la Pascua Roca"
                android:textColor="@android:color/black"
                android:gravity="bottom"
                android:ellipsize="end"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/fecha_partido"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:ems="15"
                android:text="Fecha xx/xx/xxxx"
                android:textColor="@android:color/black"
                android:gravity="bottom"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/horario_partido"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:ems="15"
                android:text="Horario"
                android:textColor="@android:color/black"
                android:gravity="bottom"
                android:textSize="18sp"/>

           <!-- <TextView
                android:id="@+id/champTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:text="Nivel *****"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray" /> -->
        </LinearLayout>

        <!-- Info del partido -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight= "0.20"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:ems="15"
                android:text="Jugadores"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/asistentes_partido"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:ems="15"
                android:text="x/10"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>